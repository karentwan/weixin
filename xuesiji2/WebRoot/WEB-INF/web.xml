<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
	id="WebApp_ID" version="3.0">
  
  <servlet>
    	<servlet-name>coreServlet</servlet-name>
    	<servlet-class>com.weixin.servlet.CoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>coreServlet</servlet-name>
    	<url-pattern>/coreServlet</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>oauthServlet</servlet-name>
    	<servlet-class>com.weixin.servlet.OauthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>oauthServlet</servlet-name>
    	<url-pattern>/oauthServlet</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>condition</servlet-name>
    	<servlet-class>com.weixin.servlet.ConditionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>condition</servlet-name>
    	<url-pattern>/condition</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>conditionQuery</servlet-name>
    	<servlet-class>com.weixin.servlet.ConditionQueryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>conditionQuery</servlet-name>
    	<url-pattern>/conditionQuery</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>dormitory</servlet-name>
    	<servlet-class>com.weixin.servlet.DormitoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>dormitory</servlet-name>
    	<url-pattern>/dormitory</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>leave</servlet-name>
    	<servlet-class>com.weixin.servlet.LeaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>leave</servlet-name>
    	<url-pattern>/leave</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>bind</servlet-name>
    	<servlet-class>com.weixin.servlet.BindServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>bind</servlet-name>
    	<url-pattern>/bind</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>querySign</servlet-name>
    	<servlet-class>com.weixin.servlet.QuerySignInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>querySign</servlet-name>
    	<url-pattern>/querySign</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>instruOauth</servlet-name>
    	<servlet-class>com.weixin.servlet.InstruOauthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>instruOauth</servlet-name>
    	<url-pattern>/instruOauth</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>manager</servlet-name>
    	<servlet-class>com.weixin.servlet.ManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>manager</servlet-name>
    	<url-pattern>/manager</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>instruBind</servlet-name>
    	<servlet-class>com.weixin.servlet.InstruBindServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>instruBind</servlet-name>
    	<url-pattern>/instruBind</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>login</servlet-name>
    	<servlet-class>com.weixin.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>login</servlet-name>
    	<url-pattern>/login</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>addClass</servlet-name>
    	<servlet-class>com.weixin.servlet.AddClassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>addClass</servlet-name>
    	<url-pattern>/addClass</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>delClass</servlet-name>
    	<servlet-class>com.weixin.servlet.DelClassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>delClass</servlet-name>
    	<url-pattern>/delClass</url-pattern>
    </servlet-mapping>
    <!-- 统计所有结果 -->
  <servlet>
    	<servlet-name>count</servlet-name>
    	<servlet-class>com.weixin.servlet.CountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>count</servlet-name>
    	<url-pattern>/count</url-pattern>
    </servlet-mapping>
    <!-- 查询所有自由的班级 -->
  <servlet>
    	<servlet-name>queryConfidomClass</servlet-name>
    	<servlet-class>com.weixin.servlet.QueryConfidomClassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>queryConfidomClass</servlet-name>
    	<url-pattern>/queryConfidomClass</url-pattern>
    </servlet-mapping>
    <!-- 获得辅导员信息的接口 -->
  <servlet>
    	<servlet-name>obtainInfo</servlet-name>
    	<servlet-class>com.weixin.servlet.ObtainInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>obtainInfo</servlet-name>
    	<url-pattern>/obtainInfo</url-pattern>
    </servlet-mapping>
    <!-- 辅导员删除填错信息的学生 -->
  <servlet>
    	<servlet-name>delStudent</servlet-name>
    	<servlet-class>com.weixin.servlet.DeleteStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>delStudent</servlet-name>
    	<url-pattern>/delStudent</url-pattern>
    </servlet-mapping>
    <!-- 从数据库里面删除班级 -->
  <servlet>
    	<servlet-name>deleteClass</servlet-name>
    	<servlet-class>com.weixin.servlet.DeleteClassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>deleteClass</servlet-name>
    	<url-pattern>/deleteClass</url-pattern>
    </servlet-mapping>
    
    
    <!-- 登陆页面的过滤器 -->
    <filter>
    	<filter-name>loginFilter</filter-name>
    	<filter-class>com.weixin.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
    	<filter-name>loginFilter</filter-name>
    	<url-pattern>/pc/*</url-pattern>
 	</filter-mapping>

</web-app>