<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
	id="WebApp_ID" version="3.0">
  
  <servlet>
    	<servlet-name>coreServlet</servlet-name>
    	<servlet-class>com.weixin.servlet.CoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>coreServlet</servlet-name>
    	<url-pattern>/coreServlet</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>oauthServlet</servlet-name>
    	<servlet-class>com.weixin.servlet.OauthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>oauthServlet</servlet-name>
    	<url-pattern>/oauthServlet</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>manager</servlet-name>
    	<servlet-class>com.weixin.servlet.ManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>manager</servlet-name>
    	<url-pattern>/manager</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>login</servlet-name>
    	<servlet-class>com.weixin.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>login</servlet-name>
    	<url-pattern>/login</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>order</servlet-name>
    	<servlet-class>com.weixin.servlet.OrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>order</servlet-name>
    	<url-pattern>/order</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>bind</servlet-name>
    	<servlet-class>com.weixin.servlet.BindServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>bind</servlet-name>
    	<url-pattern>/bind</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>oauthMember</servlet-name>
    	<servlet-class>com.weixin.servlet.MemberOauthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>oauthMember</servlet-name>
    	<url-pattern>/oauthMember</url-pattern>
    </servlet-mapping>
  <servlet>
    	<servlet-name>money</servlet-name>
    	<servlet-class>com.weixin.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>money</servlet-name>
    	<url-pattern>/money</url-pattern>
    </servlet-mapping>
    <!-- 用户查询消息记录 -->
  <servlet>
    	<servlet-name>consum</servlet-name>
    	<servlet-class>com.weixin.servlet.ConsumServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>consum</servlet-name>
    	<url-pattern>/consum</url-pattern>
    </servlet-mapping>
    <!-- 查询用户姓名 -->
  <servlet>
    	<servlet-name>queryName</servlet-name>
    	<servlet-class>com.weixin.servlet.QueryNameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>queryName</servlet-name>
    	<url-pattern>/queryName</url-pattern>
    </servlet-mapping>
    <!-- 管理员添加用户消费信息 -->
  <servlet>
    	<servlet-name>consume</servlet-name>
    	<servlet-class>com.weixin.servlet.CalConsumeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>consume</servlet-name>
    	<url-pattern>/consume</url-pattern>
    </servlet-mapping>
    <!-- 充值接口 -->
  <servlet>
    	<servlet-name>recharge</servlet-name>
    	<servlet-class>com.weixin.servlet.RechargeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>recharge</servlet-name>
    	<url-pattern>/recharge</url-pattern>
    </servlet-mapping>
    

</web-app>